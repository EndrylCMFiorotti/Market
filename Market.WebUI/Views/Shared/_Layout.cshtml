@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Market.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dropdown-modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/component-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Market.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("Style", required: false)
</head>
<body>
    <div class="navbar">
        <i class="fa fa-fw fa-bars fa-2x" id="Menu" title="Menu"></i>
        <p>Bem vindo @User.Identity?.Name</p>
        <i class="fa fa-fw fa-user-circle fa-2x" id="Settings" title="Settings"></i>
    </div>
    <div class="container">
        <div class="sidebar close">
            <partial name="_Sidebar" />
        </div>
        <div class="content expanded">
            <div class="content-body">
                @RenderBody()
            </div>
            <div class="content-footer">
                © @DateTime.Now.Year Nome da Empresa. Todos os direitos reservados.
            </div>
        </div>
    </div>
    <partial name="_DropdownModal" />
    <partial name="_LoginModal" />
    <partial name="_Toast" />
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/dropdownModal.js" asp-append-version="true"></script>
@if (TempData["ControllerMessage"] != null && @TempData["IsSuccess"] != null) {
<script type="text/javascript">openToast("@TempData["ControllerMessage"]", "@TempData["IsSuccess"]" === "True");</script>
}
@await RenderSectionAsync("Scripts", required: false)